{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": "./src",
    "outDir": "./dist",

    "lib": ["dom", "dom.iterable"],
    "jsx": "react-jsx",

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"]
}
